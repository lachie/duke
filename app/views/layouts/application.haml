!!! Strict
%html{:xmlns =>'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', :lang => 'en'}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    %title= "Duke - Upload, Vote, Boogie : #{yield(:title) || 'Music as voted by you'}"
    = stylesheet_link_tag 'duke'
    = javascript_include_tag :defaults
  %body{:id => @section}
    #header
      %img{:src => '/images/duke.png', :alt => 'Duke - Upload, Vote, Boogie', :width => '85', :height => '40'}/
    #container
      #content
        - if flash[:notice]
          #flash= flash[:notice]
        - if @current
          = render :partial => 'song/playingnow', :locals => { :song => @current }
        = yield
      #sidebar
        #menu= yield(:menu)
        #user= yield(:user)
        %a{:href => '/'}/
    #footer Powered by Rails & Ales
